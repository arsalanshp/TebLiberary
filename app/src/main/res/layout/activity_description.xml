<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detail_headerBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primaryDarkColor"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />
    </android.support.design.widget.AppBarLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/frame_fragment"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:gravity="right">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                />
            <TextView
                android:id="@+id/author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="16dp"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/book_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            />

    </LinearLayout>

    <!--<include  layout="@layout/activity_head_description" />-->

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#c0c0c0" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@color/profileTextColor" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="#c0c0c0"
        />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

           <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:gravity="right|center"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="اطلاعات بیشتر "
                    android:textStyle="bold"
                    android:textColor="#3D0400"
                    android:textSize="16dp"/>

                <ImageView
                    android:id="@+id/phonNumberIcon"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/description_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5pt"
                    android:layout_marginRight="16dp"

                    android:layout_centerInParent="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_margin="5pt">


                <TextView
                    android:id="@+id/book_author_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="11px"
                    android:layout_weight="7"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="نویسنده : "
                    android:textStyle="bold"
                    android:textColor="#A8A7A0"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5px"
                    />

                <ImageView
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/description_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5pt"
                    android:layout_marginRight="16dp"
                    android:layout_centerInParent="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_margin="5pt">


                <TextView
                    android:id="@+id/publisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="11px"
                    android:layout_weight="7"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ناشر : "
                    android:textStyle="bold"
                    android:textColor="#A8A7A0"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5px"
                    />

                <ImageView
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/description_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5pt"
                    android:layout_marginRight="16dp"
                    android:layout_centerInParent="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_margin="5pt">


                <TextView
                    android:id="@+id/book_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="11px"
                    android:layout_weight="7"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="توضیحات : "
                    android:textStyle="bold"
                    android:textColor="#A8A7A0"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5px"
                    />

                <ImageView
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/description_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5pt"
                    android:layout_marginRight="16dp"
                    android:layout_centerInParent="true"
                    />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:background="#c0c0c0"
                android:layout_marginTop="32px"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:background="@color/profileTextColor" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:background="#c0c0c0"
                android:layout_marginBottom="16dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="right"
                android:paddingTop="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="نظرات"
                        android:textStyle="bold"
                        android:textColor="#3D0400"
                        android:textSize="16dp"
                        />

                    <ImageView
                        android:background="@null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/description_24dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="5pt"
                        android:layout_marginRight="16dp"
                        android:layout_centerInParent="true" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton android:id="@+id/send_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/send2"
                        android:layout_marginLeft="5dp"
                        android:background="@null"/>
                    <EditText android:id ="@+id/comment_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/comment_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>







