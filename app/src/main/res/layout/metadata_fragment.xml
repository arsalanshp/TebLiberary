<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="10dp">

        <TextView
            android:id="@+id/author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="جعفر مرتضی عاملی "
            android:lineSpacingExtra="10dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/author_name_label"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="شرح پدید اور : "
            android:layout_alignParentRight="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="10dp">

        <TextView
            android:id="@+id/language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="10dp"
            android:text="زبان" />
        <TextView
            android:id="@+id/language_lable"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="زبان : "
            android:layout_alignParentRight="true" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="10dp">

        <TextView
            android:id="@+id/refrence_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"/>

        <TextView
            android:id="@+id/refrence_type_lable"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="نوع منبع : " />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="10dp">

        <TextView
            android:id="@+id/digital_refrences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="منابع دیجیتالی"
            android:lineSpacingExtra="10dp"/>

        <TextView
            android:id="@+id/digital_refrences_lable"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="منابع دیجیتالی : " />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="10dp">
        <TextView
            android:id="@+id/publish_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="10dp"
            android:text="وضعیت نشر" />
        <TextView
            android:id="@+id/publish_state_lable"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="وضعیت نشر : " />


    </LinearLayout>
    <View
        android:id="@+id/line_view2"
        android:layout_width="match_parent"
        android:layout_below="@id/publish_state"
        android:layout_height="1dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="10dp">

        <TextView
            android:id="@+id/subjects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="موضوعات"
            android:lineSpacingExtra="10dp"/>

        <TextView
            android:id="@+id/subjects_lable"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="موضوعات :  " />

    </LinearLayout>

