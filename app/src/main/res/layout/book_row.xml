<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/book_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:elevation="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_gravity="right">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:elevation="5dp"
        android:orientation="horizontal"
        android:background="#A9CCE3"
        android:gravity="center_vertical|right"
        android:id="@+id/card_adapter">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/book_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="عنوان کتاب "
                android:paddingLeft="120dp"
                android:textSize="16sp"
                android:layout_marginBottom="5dp"
                android:textColor="#000000" />


            <TextView
                android:id="@+id/book_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="توضیحات "
                android:textSize="12sp"
                android:textColor="#85929E"
                android:layout_gravity="right|bottom" />


        </LinearLayout>



        <ImageView
            android:id="@+id/book_thumbnail"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="@dimen/thumbnail_right_margin"
            android:layout_marginLeft="@dimen/thumbnail_left_margin"
            android:src="@drawable/book_cover" />

    </LinearLayout>

</android.support.v7.widget.CardView>
