<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="4"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_Thumbnail1"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/book_cover" />

            <TextView
                android:id="@+id/txt_book_title1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="4dp"
                android:text="kiki"
                android:textColor="#616161"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_book_author1"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginBottom="4dp"
                android:text="صیرس"
                android:textColor="#cccccc"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_Thumbnail2"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/book_cover" />

            <TextView
                android:id="@+id/txt_book_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="شیبشیب"
                android:textColor="#616161"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_book_author2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="صیرس"
                android:textColor="#cccccc"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_Thumbnail3"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/book_cover" />

            <TextView
                android:id="@+id/txt_book_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="شیبشیب"
                android:textColor="#616161"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_book_author3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="صیرس"
                android:textColor="#cccccc"
                android:textSize="12sp" />
        </LinearLayout>
        </LinearLayout>
</LinearLayout>