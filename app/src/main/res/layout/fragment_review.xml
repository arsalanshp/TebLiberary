<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="library.tebyan.com.teblibrary.fragment.menus.ReviewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="25dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <RadioGroup
            android:id="@+id/radioGroupReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radioCollection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rbtn_selector_left"
                android:button="@null"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/review_collections"
                android:textColor="@drawable/rbtn_textcolor_selector"
                android:onClick="openFragment"/>

            <RadioButton
                android:id="@+id/radioAlphabet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rbtn_selector_center"
                android:button="@null"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/review_alphabet"
                android:textColor="@drawable/rbtn_textcolor_selector"
                android:onClick="openFragment"/>

            <RadioButton
                android:id="@+id/radioSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rbtn_selector_right"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/review_subjective"
                android:textColor="@drawable/rbtn_textcolor_selector"
                android:onClick="openFragment"/>
        </RadioGroup>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/review_fragment_container"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />


    <!--<LinearLayout-->
        <!--android:id="@+id/fragment_placeholder"-->
        <!--android:orientation="vertical"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"></LinearLayout>-->

</LinearLayout>
