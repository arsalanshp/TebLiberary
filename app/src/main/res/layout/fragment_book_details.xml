<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_weight="4">

            <TextView
                android:id="@+id/book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نگاهی به زندگانی "
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginTop="40dp"

                />


            <TextView
                android:id="@+id/author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="سید عطاالله بابایی "
                android:textColor="@android:color/black"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                android:layout_below="@id/book_name" />


            <Spinner
                android:id="@+id/add_myRef_spinner"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                style="@style/spinner_style"
                android:popupBackground="#dfdfdfdf"
                android:layout_marginLeft="10dp"
                android:layout_gravity="left"/>

            <!--<Button-->
                <!--android:id="@+id/add_button"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@drawable/round_corners"-->
                <!--android:text="افزودن به منابع من "-->
                <!--android:layout_gravity="bottom"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--/>-->
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_gravity="right|center">

            <ImageView
                android:id="@+id/book_thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_drop_up_black_24dp"
                android:padding="12dp"

                />

        </LinearLayout>




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">



        <RadioGroup
            android:id="@+id/review_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="3dp"
            android:gravity="center"
            android:orientation="horizontal" >
            <RadioButton
                android:id="@+id/radio_relative_resource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rbtn_selector_left"
                android:button="@null"
                android:gravity="center"
                android:padding="5dp"
                android:onClick="onSelectFragment"
                android:text="منابع مرتبط  "
                android:textColor="@drawable/rbtn_textcolor_selector" />

            <RadioButton
                android:id="@+id/radio_analyze"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rbtn_selector_center"
                android:button="@null"
                android:gravity="center"
                android:padding="5dp"
                android:onClick="onSelectFragment"
                android:text="نقدو بررسی "
                android:textColor="@drawable/rbtn_textcolor_selector" />

            <RadioButton
                android:id="@+id/radio_metadata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rbtn_selector_right"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:padding="5dp"
                android:onClick="onSelectFragment"
                android:text="فراداده"
                android:textColor="@drawable/rbtn_textcolor_selector" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/fragment_placeholder"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></LinearLayout>


</LinearLayout>


