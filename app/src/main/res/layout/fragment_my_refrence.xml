<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/light_blue"
        android:padding="10dp">
        <ImageButton
            android:id="@+id/upload_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_weight="1"
            android:layout_gravity="left|center_vertical"
            android:layout_marginBottom="4dp"
            android:src="@drawable/ic_file_upload_black_24dp"
            android:layout_alignBottom="@+id/list_state_btn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <!--<Spinner-->
            <!--android:id="@+id/refrence_filter_spinner"-->
            <!--android:layout_width="150dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--style="@style/spinner_style"-->
            <!--android:popupBackground="#dfdfdfdf" />-->

        <ImageButton
            android:id="@+id/list_state_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:src="@drawable/ic_view_list_black_36dp"
            android:background="@null"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="2dp">

        <!-- our tablayout to display tabs  -->
        <android.support.design.widget.TabLayout
            android:id="@+id/my_ref_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

        <!-- View pager to swipe views -->
        <android.support.v4.view.ViewPager
            android:id="@+id/my_ref_view_pager"
            android:layout_width="match_parent"
            android:layout_height="fill_parent" />

    </LinearLayout>



