<com.nirhart.parallaxscroll.views.ParallaxScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:parallax_factor="1.9"
    tools:context="library.tebyan.com.teblibrary.fragment.menus.MyRefrenceFragment">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        >

        <RadioGroup
            android:id="@+id/radioGroupMyRefrence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radioReaded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rbtn_selector_left"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:text="@string/my_refrence_readed"
                android:textColor="@drawable/rbtn_textcolor_selector"
                android:onClick="onSelectFragment"/>

            <RadioButton
                android:id="@+id/radioWillRead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rbtn_selector_center"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:text="@string/my_refrence_will_read"
                android:textColor="@drawable/rbtn_textcolor_selector"
                android:onClick="onSelectFragment"/>

            <RadioButton
                android:id="@+id/radioReading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rbtn_selector_center"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:paddingRight="3dp"
                android:paddingLeft="3dp"
                android:text="@string/my_refrence_reading"
                android:textColor="@drawable/rbtn_textcolor_selector"
                android:onClick="onSelectFragment"/>

            <RadioButton
                android:id="@+id/radioNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rbtn_selector_right"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:text="@string/my_refrence_new"
                android:textColor="@drawable/rbtn_textcolor_selector"
                android:onClick="onSelectFragment"/>
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_placeholder_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corners"
        android:layout_marginTop="8dp"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="10dp"
        android:padding="12dp"
        android:gravity="right|center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_book"/>

        <ImageButton
            android:id="@+id/upload_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_file_upload_black_24dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@drawable/round_top_corners"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:gravity="right|center">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_placeholder"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></LinearLayout>

</LinearLayout>
</com.nirhart.parallaxscroll.views.ParallaxScrollView>